{
  "manifest_version": 3,
  "name": "Coogi Helper Extension",
  "version": "1.0",
  "description": "A helper to connect with the Coogi web application.",

  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "https://*.netlify.app/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}