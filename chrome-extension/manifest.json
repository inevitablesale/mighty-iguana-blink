{
  "manifest_version": 3,
  "name": "Coogi AI Recruiter",
  "version": "1.2",
  "description": "AI-powered recruiting assistant to find opportunities and contacts.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["handshake.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Coogi AI"
  },
  "externally_connectable": {
    "matches": ["https://dbtdplhlatnlzcvdvptn.dyad.sh/*"]
  }
}