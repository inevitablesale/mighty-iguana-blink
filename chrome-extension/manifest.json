{
  "manifest_version": 3,
  "name": "Coogi AI Recruiter",
  "version": "2.2",
  "description": "AI-powered recruiting assistant to find opportunities and contacts.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://dbtdplhlatnlzcvdvptn.dyad.sh/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "https://coogi.netlify.app/*",
        "https://dbtdplhlatnlzcvdvptn.dyad.sh/*"
      ],
      "js": [
        "handshake.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://coogi.netlify.app/*",
      "https://dbtdplhlatnlzcvdvptn.dyad.sh/*"
    ]
  },
  "action": {
    "default_title": "Coogi AI Extension"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://esm.sh; object-src 'self'"
  }
}