{
  "manifest_version": 3,
  "name": "Coogi AI Extension",
  "version": "1.1",
  "description": "Enhances Coogi with LinkedIn integration.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://dbtdplhlatnlzcvdvptn.dyad.sh/*"
      ],
      "js": [
        "handshake.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://dbtdplhlatnlzcvdvptn.dyad.sh/*"
    ]
  },
  "action": {
    "default_title": "Coogi AI Extension"
  }
}